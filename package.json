{
  "name": "blog-helper",
  "version": "1.0.23",
  "description": "",
  "productName": "BlogHelper",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . DISPLAY=:0 sudo chromium-browser --no-sandbox",
    "dist": "electron-builder",
    "ico": "png-to-ico build/app.png > build/app.ico"
  },
  "keywords": [
    "pc",
    "util"
  ],
  "author": "Github@ystcode",
  "repository": "https://github.com/ystcode/BlogHelper",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "^13.0.0",
    "electron-builder": "^22.10.5",
    "png-to-ico": "^2.1.0"
  },
  "dependencies": {
    "bootstrap": "^3.4.1",
    "electron-store": "^5.1.0",
    "form-data": "^3.0.0",
    "html-to-md": "^0.3.2",
    "jquery": "^3.4.1",
    "jsdom": "^15.2.1",
    "lodash": "^4.17.15",
    "logger2x": "0.0.2",
    "marked": "^0.8.0",
    "mime-types": "^2.1.27",
    "path": "^0.12.7",
    "picgo": "^1.4.8",
    "querystring": "^0.2.0",
    "request": "^2.88.0",
    "urlencode": "^1.1.0",
    "yarn": "^1.22.22"
  },
  "build": {
    "appId": "com.github.ystcode.bloghelper",
    "productName": "写作助手",
    "mac": {
      "icon": "build/app.icns",
      "type": "development",
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "arch": [
        "arm64"
      ]
    },
    "win": {
      "icon": "build/app.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "build/app.png",
      "category": "Office",
      "target": [
        "AppImage"
      ]
    }
  },
  "config": {
    "npm_config_arch": "arm64",
    "npm_config_target_arch": "arm64"
  }
}